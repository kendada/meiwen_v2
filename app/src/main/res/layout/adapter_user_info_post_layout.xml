<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/theme_list_item_bg"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            >
            <cc.meiwen.view.SelectableRoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:sriv_oval="true"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:background="@mipmap/t_qq_icon"
                android:id="@+id/type_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/type_icon"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center"
                android:id="@+id/post_type_txt"
                android:textSize="16sp"
                android:text="时尚语录"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/type_icon"
                android:layout_below="@id/post_type_txt"
                android:singleLine="true"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center"
                android:id="@+id/post_type_title"
                android:textSize="14sp"
                android:text="时尚语录"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:textSize="17sp"
            android:id="@+id/post_content_txt"
            android:text="@string/app_name"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/content_img"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@mipmap/cell_time"
                android:gravity="center_vertical"
                android:text="10月31日 10：29"
                android:drawablePadding="5dp"
                android:id="@+id/time_txt"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/cell_share"
                android:gravity="center_vertical"
                android:text="分享"
                android:drawablePadding="5dp"
                android:id="@+id/share_btn"
                android:layout_alignTop="@+id/time_txt"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/cell_favo"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="收藏"
                android:drawablePadding="5dp"
                android:id="@+id/favo_btn"
                android:layout_alignTop="@+id/share_btn"
                android:layout_toLeftOf="@+id/share_btn"
                android:layout_toStartOf="@+id/share_btn"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
