<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/theme_list_item_bg"
        android:layout_margin="5dp"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            >
            <cc.meiwen.view.SelectableRoundedImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:sriv_border_color="@color/darkPrimaryColor"
                app:sriv_border_width="1dp"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:background="@mipmap/t_qq_icon"
                android:id="@+id/type_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center"
                android:id="@+id/post_type_txt"
                android:textSize="13sp"
                android:text="时尚语录"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="17sp"
            android:id="@+id/post_content_txt"
            android:text="@string/app_name"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/content_img"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@mipmap/cell_time"
                android:gravity="center_vertical"
                android:text="10月31日 10：29"
                android:drawablePadding="5dp"
                android:id="@+id/time_txt"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="**********精彩评论***********"
        android:textSize="14sp"
        />
</LinearLayout>
