<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryColor"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:src="@mipmap/icon_singe"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textColor="@color/text"
        android:text="@string/app_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textColor="@color/text"
        android:text="这里是一个心灵的家园"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="21dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="7dp"
        android:orientation="vertical"
        android:background="@drawable/circle_bg"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/textInputLayout"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="用户昵称或邮箱"
                android:id="@+id/edit_name"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/textInputLayout1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_below="@id/edit_name"
                android:inputType="textPassword"
                android:hint="密码"
                android:id="@+id/edit_pass"
                />
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/darkPrimaryColor"
                android:background="@color/no_color"
                android:textSize="15sp"
                android:text="@string/yk_str"
                android:id="@+id/no_pass_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/darkPrimaryColor"
                android:background="@color/no_color"
                android:textSize="15sp"
                android:text="@string/dl_str"
                android:id="@+id/login_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/login_btn"
                android:textColor="@color/darkPrimaryColor"
                android:background="@color/no_color"
                android:textSize="15sp"
                android:text="@string/zc_str"
                android:id="@+id/regis_btn"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="21dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="7dp"
        android:orientation="vertical"
        android:background="@drawable/circle_bg"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="21sp"
            android:textColor="@color/primaryText"
            android:text="社交账号登录"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@mipmap/t_qq_icon"
                    android:textSize="17sp"
                    android:drawablePadding="7dp"
                    android:paddingTop="11dp"
                    android:gravity="center"
                    android:text="QQ"
                    android:id="@+id/qq_login_btn" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/t_ren_ren_icon"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:drawablePadding="7dp"
                    android:paddingTop="11dp"
                    android:gravity="center"
                    android:text="人人"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/t_wei_bo_icon"
                    android:textSize="17sp"
                    android:drawablePadding="7dp"
                    android:paddingTop="11dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="微博"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
