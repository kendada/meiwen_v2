<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <cc.meiwen.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_view"
        app:tbTitleText="美文审核"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/title_view"
        android:text="暂时没有小伙伴更新美文哦"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_view"
        android:visibility="gone"
        android:scrollbars="none"
        android:id="@+id/scrollView"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/theme_list_item_bg"
            android:layout_margin="5dp"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="11dp"
                >
                <cc.meiwen.view.SelectableRoundedImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:sriv_border_color="@color/darkPrimaryColor"
                    app:sriv_border_width="1dp"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:background="@mipmap/t_qq_icon"
                    android:id="@+id/type_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center"
                    android:id="@+id/post_type_txt"
                    android:textSize="13sp"
                    android:text="时尚语录"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="17sp"
                android:id="@+id/post_content_txt"
                android:text="@string/app_name"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/content_img"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@mipmap/cell_time"
                android:gravity="center_vertical"
                android:text="10月31日 10：29"
                android:drawablePadding="5dp"
                android:id="@+id/time_txt"
                android:textSize="12sp"
                />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:background="@drawable/jz_btn_bg_selector"
        android:textColor="@color/text"
        android:text="不要"
        android:id="@+id/do_not_btn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:background="@drawable/jz_btn_bg_selector"
        android:textColor="@color/text"
        android:text="要"
        android:id="@+id/do_btn"
        />
</RelativeLayout>
