<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/color00C4AF"
    android:id="@+id/titlebar_rl_root"
    android:animateLayoutChanges="true">

    <!--为了动画效果，不得不套一个布局-->
    <RelativeLayout
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/titlebar_iv_return"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/live_return"/>

        <TextView
            android:id="@+id/titlebar_tv_event_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/live_cancel"
            android:textColor="@color/bank_title_bar_text_color"
            android:textSize="14sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/titlebar_tv_title"
        android:singleLine="true"
        android:ellipsize="middle"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/titlebar_tv_event_right"
        android:layout_width="wrap_content"
        android:minWidth="58dp"
        android:padding="5dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="@color/bank_title_bar_text_color"
        android:textSize="14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/titlebar_tv_event_right2"
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="@color/bank_title_bar_text_color"
        android:textSize="14sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/titlebar_iv_right"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
        android:visibility="gone"/>

</RelativeLayout>